%form.form-horizontal{'ng-submit' => 'accountCreate()'}
  .form-group
    %label.col-sm-5.control-label Fist name
    .col-sm-7
      %input.form-control{'ng-model' => 'accountCreateFormData.first_name', placeholder: 'First name', type: 'text', required: ''}/
  .form-group
    %label.col-sm-5.control-label Last name
    .col-sm-7
      %input.form-control{'ng-model' => 'accountCreateFormData.last_name', placeholder: 'Last name', type: 'text', required: ''}/
  .form-group
    %label.col-sm-5.control-label Email
    .col-sm-7
      %input.form-control{'ng-model' => 'accountCreateFormData.email', placeholder: 'Email', type: 'email', required: ''}/
  .form-group
    %label.col-sm-5.control-label Password
    .col-sm-7
      %input.form-control{'ng-model' => 'accountCreateFormData.password', placeholder: 'Password', type: 'password', required: '', minlength: 8}/
    - if @validatable
      %em
        (#{@minimum_password_length} characters minimum)
  .form-group
    %label.col-sm-5.control-label Password confirmation
    .col-sm-7
      %input.form-control{'ng-model' => 'accountCreateFormData.password_confirmation', placeholder: 'Password confirmation', type: 'password', required: '', minlength: 8}/
  .form-group
    %label.col-sm-5.control-label Roles
    .col-sm-7
      %tags-input{'ng-model' => 'accountCreateFormData.roles', class: 'bootstrap', placeholder: 'Split with comma', type: 'text', required: ''}
        %auto-complete{source: 'textRoles()'}/

  .form-group
    .col-sm-offset-5.col-sm-7
      %button.btn.btn-xs.btn-primary{type: 'submit'} Save
      %a.btn.btn-xs.btn-danger{type: 'button', 'ng-click' => 'accountToggleCreate()'} Cancel