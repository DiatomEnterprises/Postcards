%button.btn.btn-danger.pull-right{"ng-click" => "toggle()", :type => "submit"} X
%form.form-horizontal{"ng-submit" => "addReceiver()"}
	.form-group
		%label.col-sm-2.control-label First name
		.col-sm-8
			%input.form-control{"ng-model" => "receiverFormData.first_name", :placeholder => "First name", :type => "text", :required => ""}/
	.form-group
		%label.col-sm-2.control-label Last name
		.col-sm-8
			%input.form-control{"ng-model" => "receiverFormData.last_name", :placeholder => "Last name", :type => "text", :required => ""}/
	.form-group
		%label.col-sm-2.control-label City
		.col-sm-8
			%input.form-control{"ng-model" => "receiverFormData.city", :placeholder => "City", :type => "text"}/
	.form-group
		%label.col-sm-2.control-label Country
		.col-sm-8
			%input.form-control{"ng-model" => "receiverFormData.country", :placeholder => "Country", :type => "text"}/
	.form-group
		%label.col-sm-2.control-label Zip
		.col-sm-8
			%input.form-control{"ng-model" => "receiverFormData.zip", :placeholder => "Zip", :type => "text"}/
	.form-group
		%label.col-sm-2.control-label Address line 1
		.col-sm-8
			%input.form-control{"ng-model" => "receiverFormData.address_line_1", :placeholder => "Address line 1", :type => "text", :required => ""}/
	.form-group
		%label.col-sm-2.control-label Address line 1
		.col-sm-8
			%input.form-control{"ng-model" => "receiverFormData.address_line_2", :placeholder => "Address line 2", :type => "text"}/
	.form-group
		%label.col-sm-2.control-label Address line 1
		.col-sm-8
			%input.form-control{"ng-model" => "receiverFormData.address_line_3", :placeholder => "Address line 3", :type => "text"}/
	.form-group
		.col-sm-offset-2.col-sm-10
			%button.btn.btn-primary{:type => "submit"} Save