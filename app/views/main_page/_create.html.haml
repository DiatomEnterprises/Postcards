%form.form-horizontal{'ng-submit' => 'receiverCreate()'}
  .form-group
    %label.col-sm-4.control-label First name
    .col-sm-7
      %input.form-control{'ng-model' => 'receiverCreateFormData.first_name', placeholder: 'First name', type: 'text', required: ''}/
  .form-group
    %label.col-sm-4.control-label Last name
    .col-sm-7
      %input.form-control{'ng-model' => 'receiverCreateFormData.last_name', placeholder: 'Last name', type: 'text', required: ''}/
  .form-group
    %label.col-sm-4.control-label Country
    .col-sm-7
      %input.form-control{'ng-model' => 'receiverCreateFormData.country', placeholder: 'Country', type: 'text'}/
  .form-group
    %label.col-sm-4.control-label State
    .col-sm-7
      %input.form-control{'ng-model' => 'receiverCreateFormData.state', placeholder: 'State', type: 'text'}/
  .form-group
    %label.col-sm-4.control-label City
    .col-sm-7
      %input.form-control{'ng-model' => 'receiverCreateFormData.city', placeholder: 'City', type: 'text'}/
  .form-group
    %label.col-sm-4.control-label Zip
    .col-sm-7
      %input.form-control{'ng-model' => 'receiverCreateFormData.zip', placeholder: 'Zip', type: 'text'}/
  .form-group
    %label.col-sm-4.control-label Address line 1
    .col-sm-7
      %input.form-control{'ng-model' => 'receiverCreateFormData.address_line_1', placeholder: 'Address line 1', type: 'text', required: ''}/
  .form-group
    %label.col-sm-4.control-label Address line 2
    .col-sm-7
      %input.form-control{'ng-model' => 'receiverCreateFormData.address_line_2', placeholder: 'Address line 2', type: 'text'}/
  .form-group
    %label.col-sm-4.control-label Birthday
    %datepicker.col-sm-7{'date-format' => '{{dateFormat}}'}
      %input.form-control{'ng-model' => 'receiverCreateFormData.birthday', type: 'text', required: ''}
  .form-group
    .col-sm-offset-4.col-sm-7
      %button.btn.btn-primary{type: 'submit'} Save